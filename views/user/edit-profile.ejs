    <!-- custom scripts -->
    <script>
        document.getElementById('editProfileForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent form submission
    
            // Clear previous error messages
            document.getElementById('nameError').textContent = '';
            document.getElementById('phoneError').textContent = '';
    
            // Get form values
            const fullname = document.getElementById('fullname').value.trim();
            const phone = document.getElementById('phone').value.trim();
    
            // Validate fields
            let isValid = true;
            if (fullname === '') {
                document.getElementById('nameError').textContent = 'Full name is required.';
                isValid = false;
            }
            if (phone === '' || phone.length !== 10 || isNaN(phone)) {
                document.getElementById('phoneError').textContent = 'Mobile number must be exactly 10 digits.';
                isValid = false;
            }
    
            if (!isValid) return;
    
            // Prepare data for PATCH request
            const data = { fullname, phone };
    
            // Send PATCH request using Fetch API
            fetch('/edit-profile', {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert('Profile updated successfully');
                    // Optionally, handle the response and update the UI accordingly
                    window.location.href = data.redirectUrl;
                } else if (data.errors) {
                    alert('Failed to update profile');
                    console.error('Validation errors:', data.errors);
                }
            })
            .catch(error => {
                alert('Error updating profile');
                console.error('Error:', error);
            });
        });
    </script>
    

