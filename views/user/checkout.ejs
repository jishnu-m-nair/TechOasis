    <script src="/userassets/js/vendor/vendor.min.js"></script>
    <script src="/userassets/js/plugins/plugins.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Main JS -->
    <script src="/userassets/js/main.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const proceedButton = document.getElementById('checkoutForm');
    
    if (proceedButton) {
        proceedButton.addEventListener("submit", async (e) => {
            e.preventDefault(); // Prevent default form submission

            const selectedAddressType = document.querySelector('input[name="address"]:checked');
            const selectedPaymentOption = document.querySelector('input[name="paymentOption"]:checked');

            if (!selectedAddressType || !selectedPaymentOption) {
                Swal.fire({
                    title: "Attention!",
                    text: "Please select both an address type and a payment option.",
                    icon: "warning",
                    confirmButtonText: "OK",
                });
                return;
            }

            const addressId = selectedAddressType.value;
            const paymentOption = selectedPaymentOption.value;

            const data = {
                addressId,
                paymentOption,
            };
console.log(data)
            if (paymentOption === "COD") {
                try {
                    console.log('reached')
                    const response = await fetch('/checkout', {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(data),
                    });
                    // const datas = await response.json();
                    if (response.ok) {
                        console.log("in response.ok")
                        const responseData = await response.json();
                        if (responseData.success) {
                            Swal.fire({
                                title: "Order Placed!",
                                text: "Your order has been placed successfully.",
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then(() => {
                                window.location.href = `/order-confirmation/${responseData.orderId}`;
                            });
                            // window.location.href = `/order-confirmation/${responseData.orderId}`;
                            // Uncomment the next line if you want to redirect after successful order
                            // window.location.href = "/orderConfirmation/" + responseData.orderId;
                        } else {
                            console.log("Checkout failed:", responseData.error);
                            Swal.fire({
                                title: "Error",
                                text: "Checkout failed: " + responseData.error,
                                icon: "error",
                                confirmButtonText: "OK",
                            });
                        }
                    } else {
                        Swal.fire({
                            title: "Out of Stock!",
                            text: `This product is currently out of stock.`,
                            icon: "warning",
                            confirmButtonText: "OK",
                        });
                    }
                } catch (error) {
                    console.error("Fetch error:", error);
                    Swal.fire({
                        title: "Error",
                        text: "An error occurred while processing your order.",
                        icon: "error",
                        confirmButtonText: "OK",
                    });
                }
            } else {
                Swal.fire({
                    title: "Invalid Payment",
                    text: "Online Payment unavailable! Select Cash on Delivery",
                    icon: "warning",
                    confirmButtonText: "OK",
                });
            }
        });
    } else {
        console.error("Checkout form not found");
    }
});
    </script>
</body>
</html>