        function uploadCroppedImages(inputId, imagePreviewsId, saveButtonId) {
            const input = document.getElementById(inputId);
            const originalFiles = Array.from(input.files);
            let processedFiles = [];
            // const dataTransfer = new DataTransfer();

            let pendingCrops = croppers.length;

            const finalizeCropping = () => {
                const dataTransfer = new DataTransfer();
                processedFiles.forEach(file => {
                    if (file) dataTransfer.items.add(file);
                });
                input.files = dataTransfer.files;
                document.getElementById(saveButtonId).style.display = 'none';
                croppers = [];
            };

            croppers.forEach((cropperObj, index) => {
                const { cropper, img } = cropperObj;
                const canvas = cropper.getCroppedCanvas();

                if (canvas) {
                    // Compress the image
                    canvas.toBlob((blob) => {
                        const originalFileName = originalFiles[index].name;
                        
                        // Create an image element for compression
                        const image = new Image();
                        image.src = URL.createObjectURL(blob);
                        image.onload = function() {
                            // Create a new canvas for the compressed image
                            const compressedCanvas = document.createElement('canvas');
                            const ctx = compressedCanvas.getContext('2d');
                            
                            // Set the canvas size (you can adjust this for different compression levels)
                            const maxWidth = 1000;
                            const maxHeight = 1000;
                            let width = image.width;
                            let height = image.height;
                            
                            if (width > height) {
                                if (width > maxWidth) {
                                    height *= maxWidth / width;
                                    width = maxWidth;
                                }
                            } else {
                                if (height > maxHeight) {
                                    width *= maxHeight / height;
                                    height = maxHeight;
                                }
                            }
                            
                            compressedCanvas.width = width;
                            compressedCanvas.height = height;
                            
                            // Draw the image on the canvas
                            ctx.drawImage(image, 0, 0, width, height);
                            
                            // Convert the compressed canvas to a blob
                            compressedCanvas.toBlob((compressedBlob) => {
                                const file = new File([compressedBlob], originalFileName, { type: 'image/jpeg' });
                                
                                console.log(`Compressed image ${index} size:`, file.size);
                                
                                processedFiles[index] = file;                                
                                // dataTransfer.items.add(file);
                                img.src = URL.createObjectURL(compressedBlob);

                                // Clean up cropper instance
                                cropper.destroy();

                                pendingCrops--;
                                if (pendingCrops === 0) {
                                    finalizeCropping();
                                }
                            }, 'image/jpeg', 0.7); // Adjust quality here (0.7 = 70% quality)
                        };
                    });
                } else {
                    pendingCrops--;
                    if (pendingCrops === 0) {
                        finalizeCropping();
                    }
                }
            });

            // Add a fallback to hide the button if no images were processed
            if (pendingCrops === 0) {
                finalizeCropping();
            }
        }

